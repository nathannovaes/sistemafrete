{% extends 'base.html.twig' %}

{% block title %}Orders index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="box-title">
                    <h4>PEDIDOS</h4>
                </div>

                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Código</th>
                                <th>Cep Origem</th>
                                <th>Cep Destino</th>
                                <th>Opções</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for order in orders %}
                                <tr>
                                    <td>{{ order.id }}</td>
                                    <td>{{ order.cepOrigin }}</td>
                                    <td>{{ order.cepDestiny }}</td>
                                    <td>
                                        <a href="{{ path('orders_show', {'id': order.id}) }}">show</a>
                                        <a href="{{ path('orders_edit', {'id': order.id}) }}">edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">Nenhum pedido foi encontrado.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
