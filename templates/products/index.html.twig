{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="box-title">
                <h4>PRODUTOS</h4>
            </div>

            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Nome</th>
                                <th>Dimensões</th>
                                <th>Peso</th>
                                <th>Opções</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.id }}</td>
                                <td>{{ product.name }}</td>
                                <td>{{ product.dimensions }}</td>
                                <td>{{ product.weight }}</td>
                                <td>
                                    <a href="{{ path('products_show', {'id': product.id}) }}">show</a>
                                    <a href="{{ path('products_edit', {'id': product.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Nenhum produto foi encontrado.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
