{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-3">
                <div class="box-title">
                    <h4>PRODUTO</h4>
                </div>
                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ product.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ product.name }}</td>
                            </tr>
                            <tr>
                                <th>Dimensions</th>
                                <td>{{ product.dimensions }}</td>
                            </tr>
                            <tr>
                                <th>Weight</th>
                                <td>{{ product.weight }}</td>
                            </tr>
                            </tbody>
                        </table>
                        <a href="{{ path('products_index') }}">back to list</a>

                        <a href="{{ path('products_edit', {'id': product.id}) }}">edit</a>

                        {{ include('products/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}
