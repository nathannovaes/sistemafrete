{% extends 'base.html.twig' %}

{% block title %}Quotations index{% endblock %}

{% block body %}
    <h1>Quotations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Service_code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quotation in quotations %}
            <tr>
                <td>{{ quotation.id }}</td>
                <td>{{ quotation.serviceCode }}</td>
                <td>
                    <a href="{{ path('quotations_show', {'id': quotation.id}) }}">show</a>
                    <a href="{{ path('quotations_edit', {'id': quotation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('quotations_new') }}">Create new</a>
{% endblock %}
